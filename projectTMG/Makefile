#------------------------------------------------------------------------------
# Makefile
# Для cборки projectTMG
#------------------------------------------------------------------------------
# Компилятор
CC=g++
# Флаги сборщика
CF=-c -Wall
# Префикс линковщика
PR=-l
# Опции линковки
LF=$(PR) sfml-window $(PR) sfml-graphics $(PR) sfml-system $(PR) sfml-audio
# Имя исполняемого файла
OF=game
#------------------------------------------------------------------------------
all: build
#----------------------------------------------------------
# Скомпилировать main.cpp
main.o: main.cpp macros.h
	$(CC) $(CF) -o main.o main.cpp
#----------------------------------------------------------
# Залинковать все в один исполняемый файл
build: main.o
	$(CC) $(LF) main.o -o $(OF)
#----------------------------------------------------------
# Удалить все object-файлы и исполняемый файл проекта
clean:
	rm -rf *.o $(OF)
#----------------------------------------------------------
# Удалить все логи в директории
flush:
	rm -rf *.log
#----------------------------------------------------------
# Запустить исполняемый файл
run: build
	./$(OF)
#------------------------------------------------------------------------------
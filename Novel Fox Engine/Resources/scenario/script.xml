<?xml version="1.0" encoding="utf-8"?>
<SCRIPTGAME>

  <FONT id="standart" src="scenario/fonts/font.ttf"/>
  <FONT id="classic" src="scenario/fonts/CyrilicOld.TTF"/>
  
  <SPRITE id="background" layer="1" smooth="true" x="0" y="0" scale="1" src="scenario/texture.png"/>
  <SPRITE id="maya1" layer="1" smooth="true" x="700" y="290" scale="0.7" src="scenario/maya2.png"/>
  <SPRITE id="maya2" layer="1" smooth="true" x="1040" y="50" scale="1" src="scenario/maya1.png"/>

  <GIF id="gif1" layer="1" smooth="true" x="50" y="300" scale="1" width="256" height="256" delay="40" src="scenario/gifFile1.png"/>
  <GIF id="gif2" layer="1" smooth="true" x="50" y="500" scale="1" width="256" height="256" delay="40" src="scenario/gifFile2.png"/>

  <MUSIC volume="100" loop="true" src="scenario/music.ogg" cmd="start"/>
  
  <SOUND volume="100" src="scenario/sound.ogg"/>

  <TEXT id="txt1" name="Майа" layer="1" font="standart" color="blue" text="- Привет, Tolya!" size="30" x="360" y="320"/>

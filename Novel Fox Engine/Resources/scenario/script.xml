  <TEXT id="txt4" layer="1" font="classic" color="black" text="Толя был в сети 15 минут назад..." size="24" x="360" y="440"/>

  <VIDEO id="video1" volume="0" layer="1" loop="true" x="10" y="20" width="750" height="300" src="scenario/video.ogv"/>

</SCRIPTGAME>
